<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yoon.word.ResultView">

    <TextView
        android:paddingBottom="30dp"
        android:id="@+id/resultView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20sp"
        android:paddingTop="10sp"
        android:text="@string/insert_word_title"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20sp"
        android:paddingTop="10sp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insert_word_word"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/resultView_word"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:textSize="25sp"/>

    </LinearLayout>

    <LinearLayout
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20sp"
        android:paddingTop="10sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insert_word_mean"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/resultView_mean"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:textSize="25sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20sp"
        android:paddingTop="10sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insert_word_memo"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/resultView_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:textSize="25sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="10sp">

        <Button
            android:id="@+id/resultView_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resultView_update"
            android:onClick="update"/>

        <Button
            android:id="@+id/resultView_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resultView_cancel"
            android:onClick="update"/>
    </LinearLayout>

</LinearLayout>
